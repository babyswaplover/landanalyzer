<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>Baby Wonderland Analyzer</title>
  </head>
  <body>
    <div class="container">
      <h1>Baby Wonderland Analyzer</h1>
      <h5 style="text-align:right">Fetched: <%=date %> (UTC)</h5>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>Address</th>
              <th>Size</th>
              <th>Type</th>
              <th style="text-align:right">Total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="font-monospace">
                [<a rel="noreferrer" href="https://home.babyswap.finance/did/<%=address %>">DID</a>]
                <%=address %>
              </td>
              <td></td>
              <td></td>
              <td style="text-align:right"><%=lands.reduce((total, land)=>total + land.regionWeight**2, 0) %></td>
            </tr>
            <% for (const count of counts) { %>
            <tr>
              <td></td>
              <td><%= formatSize(count.regionWeight) %></td>
              <td><%= formatType(count.level) %></td>
              <td style="text-align:right"><%=count.count %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- My Lands -->
      <div class="row">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>TokenId</th>
              <th>Location</th>
              <th>Size</th>
              <th>Type</th>
              <th>Adjacents</th>
            </tr>
          </thead>
          <tbody>
          <% for (const land of lands) { %>
            <tr>
              <td><%=land.tokenId %></td>
              <td>
                <a rel="noreferrer" href="<%=getLocationUrl(land.x, land.y) %>">
                  <%=formatLocation(land.x, land.y) %>
                </a>
              </td>
              <td><%=formatSize(land.regionWeight) %></td>
              <td><%=formatType(land.level) %></td>
              <td><a href="/adjacents/<%=land.tokenId %>">Check</a></td>
            </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
