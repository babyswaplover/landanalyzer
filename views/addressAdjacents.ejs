<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>Baby Wonderland Analyzer</title>
  </head>
  <body>
    <div class="container">
      <h1>Baby Wonderland Analyzer</h1>
      <h5 style="text-align:right">Fetched: <%=date %></h5>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>Address</th>
              <th>Size</th>
              <th>Type</th>
              <th>Total Lands</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="font-monospace">
                [<a rel="noreferrer" href="https://home.babyswap.finance/did/<%=address %>">DID</a>]
                <%=address %>
              </td>
              <td></td>
              <td></td>
              <td><%=lands.length %></td>
            </tr>
          <% for (const count of counts) { %>
            <tr>
              <td></td>
              <td><%=formatSize(count.regionWeight) %></td>
              <td><%=formatType(count.level) %></td>
              <td><%=count.count %></td>
            </tr>
        <% } %>
          </tbody>
        </table>
      </div>

      <!-- adjacents -->
      <div class="row">
        <h2>Adjacents</h2>
        <table class="table">
          <thead>
            <tr>
              <!-- myland -->
              <th>TokenId</th>
              <th>Location</th>
              <th>Size</th>
              <th>Type</th>
              <th>Adjacents</th>
              <!-- adjacents -->
              <th>Location</th>
              <th>Size</th>
              <th>Type</th>
              <th>Owner</th>
              <th>Market</th>
            </tr>
          </thead>
          <tbody>
          <% for (const land of lands) { %>
            <tr>
              <!-- myland -->
              <td><%=land.tokenId %></td>
              <td><%=formatLocation(land.x, land.y) %></td>
              <td><%=formatSize(land.regionWeight) %></td>
              <td><%=formatType(land.level) %></td>
              <td style="text-align:right"><%=land.adjacents.length %></td>
              <!-- adjacents -->
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <% for (const adjacent of land.adjacents) { %>
              <tr>
                <!-- myland -->
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <!-- adjacents -->
                <td><%=formatLocation(adjacent.x, adjacent.y) %></td>
                <td><%=formatSize(adjacent.regionWeight) %></td>
                <td><%=formatType(adjacent.level) %></td>
                <td class="font-monospace">
                <% if (land.userAddress == adjacent.userAddress) { %>
                  Owned
                <% } else { %>
                  [<a rel="noreferrer" href="https://home.babyswap.finance/did/<%=adjacent.userAddress %>">DID</a>]
                  <a href="/address/<%=adjacent.userAddress %>">
                    <%=adjacent.userAddress %>
                  </a>
                <% } %>
                </td>
                <td>
                <% if (adjacent.onMarket==1) { %>
                  <a rel="noreferrer" href="https://market.babyswap.finance/nfts/collection/0x1fe7f243eb49f3b9575f51a2f9fba9fc2c1dd68d/<%=adjacent.tokenId %>"><%=adjacent.tokenId %></a>
                <% } %>
              </td>
            </tr>
            <% } %>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
