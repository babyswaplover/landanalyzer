<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>Baby Wonderland Analyzer</title>
  </head>
  <body>
    <div class="container">
      <h1>Baby Wonderland Analyzer</h1>
      <h5 style="text-align:right">Fetched: <%=date %> (UTC)</h5>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>Address</th>
              <th>TokeId</th>
              <th>Size</th>
              <th>Type</th>
              <th>Location</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="font-monospace"><%=land.userAddress %></td>
              <td><%=land.tokenId %></td>
              <td><%=formatSize(land.regionWeight) %></td>
              <td><%=formatType(land.level) %></td>
              <td>
                <a rel="noreferrer" href="<%=getLocationUrl(land.x, land.y) %>">
                  <%=formatLocation(land.x, land.y) %>
                </a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row">
        <h2>Adjacents</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Location</th>
              <th>TokeId</th>
              <th>Size</th>
              <th>Type</th>
              <th>Owner</th>
              <th>On Market</th>
            </tr>
          </thead>
          <tbody>
            <% for (const adjacent of adjacents) { %>
            <tr>
              <td>
                <a rel="noreferrer" href="<%=getLocationUrl(adjacent.x, adjacent.y) %>">
                  <%=formatLocation(adjacent.x, adjacent.y) %>
                </a>
              </td>
              <td><%=adjacent.tokenId %></td>
              <td><%=formatSize(adjacent.regionWeight) %></td>
              <td><%=formatType(adjacent.level) %></td>
              <td class="font-monospace">
              <% if (land.userAddress == adjacent.userAddress) { %>
                Owned
              <% } else { %>
                [<a rel="noreferrer" href="https://home.babyswap.finance/did/<%=adjacent.userAddress %>">DID</a>]
                <a href="/address/<%=adjacent.userAddress %>">
                  <%=adjacent.userAddress %>
                </a>
              <% } %>
              </td>
              <td>
              <% if (adjacent.onMarket==1) { %>
                <a rel="noreferrer" href="https://market.babyswap.finance/nfts/collection/0x1fe7f243eb49f3b9575f51a2f9fba9fc2c1dd68d/<%=adjacent.tokenId %>">
                  <%=adjacent.tokenId %>
                </a>
              <% } %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
